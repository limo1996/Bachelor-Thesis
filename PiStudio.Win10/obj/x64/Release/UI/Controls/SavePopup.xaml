<UserControl x:ConnectionId='1'
    x:Class="PiStudio.Win10.UI.Controls.SavePopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiStudio.Win10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="80"
    d:DesignWidth="150">
    <UserControl.Resources>
        <Storyboard x:ConnectionId='2' x:Name="HeightAnimation" Storyboard.TargetName="Body">
            <DoubleAnimation Storyboard.TargetProperty="Height" Duration="0:0:0.13" From="0" To="100" EnableDependentAnimation="True"/>
        </Storyboard>
    </UserControl.Resources>
    <Popup x:ConnectionId='3' Height="100" Width="150" Name="PopupBase">
        <Grid x:ConnectionId='4' BorderThickness="2"                                                                                                                            
                                                                                                                                               
              Height="100" Width="150" x:Name="Body">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid x:ConnectionId='5' Grid.Row="0"                                                                                                          
                                                    x:Name="Button1">
                <TextBlock x:ConnectionId='8' FontSize="18" Margin="5,0,5,0"                                         VerticalAlignment="Center"
                                                                                                                                                     />
            </Grid>
            <Grid x:ConnectionId='6' Grid.Row="1"                                                                                                          
                                                    x:Name="Button2">
                <TextBlock x:ConnectionId='7' FontSize="18" Margin="5,0,5,0"                                         VerticalAlignment="Center"
                                                                                                                                                     />
            </Grid>
        </Grid>
    </Popup>
</UserControl>

