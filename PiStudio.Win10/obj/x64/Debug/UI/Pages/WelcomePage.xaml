<Page x:ConnectionId='1'
    x:Class="PiStudio.Win10.UI.Pages.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiStudio.Win10.UI.Controls"
    xmlns:r="using:PiStudio.Win10.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2'                                                                                                                      >
        <Grid>
            <Image Stretch="UniformToFill" Source="/title.jpg"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25*"></RowDefinition>
                    <RowDefinition Height="348*"/>
                    <RowDefinition Height="107*"></RowDefinition>
                    <RowDefinition Height="107*" MinHeight="90"></RowDefinition>
                    <RowDefinition Height="53*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock x:ConnectionId='3' Name="SloganText" 
                                   FontSize="50"
                                   Foreground="#FFF12346"
                                   Text="Edit, draw and share your photos" 
                                   Grid.Row="1"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Center"
                                   TextWrapping="WrapWholeWords" Margin="21,0,21,106" Grid.RowSpan="2"/>

                <TextBlock x:ConnectionId='4' Name="LoadImageText"
                                   FontSize="30"
                                   Foreground="White"
                                   Text="Start by uploading image"
                                   HorizontalAlignment="Center"
                                   Grid.Row="2"
                                   VerticalAlignment="Bottom"
                                   TextWrapping="WrapWholeWords" Margin="33,0"/>

                <Button x:ConnectionId='5' FontSize="50"
                                FontWeight="Normal"
                                Foreground="#FFD6DBE9"
                                Background="Transparent"
                                Name="LoadImageButton"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Grid.Row="3"
                                                              Margin="45,12,45,12.666">
                    <Button.Content>
                        <Border BorderBrush="#FFF12346"
                                BorderThickness="3"
                                CornerRadius="30"
                                Width="200"
                                Height="70">
                            <Border.Child>
                                <TextBlock Foreground="White"
                                                   FontSize="50"
                                                   Text="LOAD"
                                                   CharacterSpacing="10"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                            </Border.Child>
                        </Border>
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>

