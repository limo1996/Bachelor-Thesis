<Page x:ConnectionId='1'
    x:Class="PiStudio.Win10.UI.Pages.FiltersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiStudio.Win10.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2'                                                                                                                      >
        <SplitView x:ConnectionId='3' Name="MainMenu" DisplayMode="CompactOverlay" IsPaneOpen="False" CompactPaneLength="50"
                   OpenPaneLength="150">
            <SplitView.Pane>
                <Grid x:ConnectionId='4'                                                                                                                           
                            x:Name="ItemsWrapper">
                    <Button x:ConnectionId='5' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                            Width="50" Height="50"                         VerticalAlignment="Top"
                                                                                                                                                      
                                                                                                                                                       />
                    <local:MenuItem x:ConnectionId='6' x:Name="HomeItem"                                                                                       
                                    Symbol="Home" Text="Home" Height="50" Margin="0,50" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='7' x:Name="FilterItem"                                                                                       
                                    Symbol="Filter"  IsSelected="True" Text="Filters" Height="50" Margin="0,100" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='8' x:Name="BrightnessItem"                                                                                       
                                    Symbol="OutlineStar" Text="Brightness" Height="50" Margin="0, 150" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='9' x:Name="DrawItem"                                                                                       
                                    Symbol="Edit" Text="Draw" Height="50" Margin="0,200" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='10' x:Name="SaveItem"                                                                                       
                                    Symbol="Save" Text="Save" Height="50" Margin="0,250" VerticalAlignment="Top" IsSelectionEnabled="False"/>
                    <local:MenuItem x:ConnectionId='11' x:Name="SpeakItem"                                                                                       
                                    Symbol="Microphone" Text="Speak" IsSelectionEnabled="False" Height="50" Margin="0,300" VerticalAlignment="Top"/>

                    <Grid Background="Gray" Height="1" VerticalAlignment="Bottom" Margin="0,0,0,50" Width="150" BorderThickness="0"/>
                    <local:MenuItem x:ConnectionId='12' x:Name="SettingsItem"                                                                                       
                                    Symbol="Setting" Text="Settings" IsSelectionEnabled="True" Height="50" VerticalAlignment="Bottom"/>

                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid x:ConnectionId='13' Name="GridContent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*">
                        </RowDefinition>
                        <RowDefinition Height="*">
                        </RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <ProgressRing x:ConnectionId='15' Name="PRing" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                      Height="125" Width="125" />
                        <Image x:ConnectionId='16' Margin="15,15,15,15" Name="ImageContent" Stretch="Uniform"/>
                    </Grid>
                    <GridView x:ConnectionId='14' Name="FilterGridView" 
                              IsItemClickEnabled="True"
                              IsSwipeEnabled="True"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollMode="Enabled"
                              ScrollViewer.VerticalScrollMode="Disabled"
                              SelectionMode="Single"
                              VerticalAlignment="Stretch"
                              VerticalContentAlignment="Stretch"
                              Grid.Row="1">

                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>

                        <GridView.ItemContainerStyle>
                            <Style TargetType="GridViewItem">
                                <Setter Property="HorizontalAlignment"
                                        Value="Stretch" />
                                <Setter Property="VerticalAlignment"
                                        Value="Stretch" />
                            </Style>
                        </GridView.ItemContainerStyle>

                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Grid BorderBrush="Black"
                                      HorizontalAlignment="Stretch"
                                      >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Image Source="{Binding Source}" 
                                           Stretch="Uniform" 
                                           Grid.Row="0"/>
                                    <TextBlock Text="{Binding Text}" 
                                               FontSize="14" 
                                               Foreground="White"
                                               VerticalAlignment="Bottom"
                                               HorizontalAlignment="Right"
                                               FontStyle="Normal"
                                               Grid.Row="0"/>
                                    <local:Rater BorderBrush="Transparent" 
                                                  Rating="{Binding Rating}"
                                                  Grid.Row="1"/>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

