<Page x:ConnectionId='1'
    x:Class="PiStudio.Win10.UI.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiStudio.Win10.UI.Controls"
    xmlns:r="using:PiStudio.Shared.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2'                                                                                                                      >
        <SplitView x:ConnectionId='3' Name="MainMenu" DisplayMode="CompactOverlay" IsPaneOpen="False" CompactPaneLength="50"
                   OpenPaneLength="150">
            <SplitView.Pane>
                <Grid x:ConnectionId='4'                                                                                                                           
                            x:Name="ItemsWrapper">
                    <Button x:ConnectionId='5' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                            Width="50" Height="50"                         VerticalAlignment="Top"
                                                                                                                                                      
                                                                                                                                                       />
                    <local:MenuItem x:ConnectionId='6' x:Name="HomeItem"                                                                                       
                                    Symbol="Home" Text="Home" Height="50" Margin="0,50" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='7' x:Name="FilterItem"                                                                                       
                                    Symbol="Filter" Text="Filters" Height="50" Margin="0,100" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='8' x:Name="BrightnessItem"                                                                                       
                                    Symbol="OutlineStar" Text="Brightness" Height="50" Margin="0, 150" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='9' x:Name="DrawItem"                                                                                       
                                    Symbol="Edit" Text="Draw" Height="50" Margin="0,200" VerticalAlignment="Top"/>
                    <local:MenuItem x:ConnectionId='10' x:Name="SaveItem"                                                                                       
                                    Symbol="Save" Text="Save" Height="50" Margin="0,250" VerticalAlignment="Top" IsSelectionEnabled="False"/>
                    <local:MenuItem x:ConnectionId='11' x:Name="SpeakItem"                                                                                       
                                    Symbol="Microphone" Text="Speak" IsSelectionEnabled="False" Height="50" Margin="0,300" VerticalAlignment="Top"/>

                    <Grid Background="Gray" Height="1" VerticalAlignment="Bottom" Margin="0,0,0,50" Width="150" BorderThickness="0"/>
                    <local:MenuItem x:ConnectionId='12' x:Name="SettingsItem"                                                                                       
                                    Symbol="Setting" Text="Settings" IsSelectionEnabled="True" Height="50" VerticalAlignment="Bottom" IsSelected="True"/>

                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <local:PiBar x:ConnectionId='13' Grid.Row="0" PlaceholderText="Search" Text="Settings"                                                                x:Name="Bar"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Grid Width="8" />
                        <TextBlock x:ConnectionId='38' Text="General" FontSize="16" Margin="10" x:Name="General"                                 
                                                                                                       FontWeight="SemiBold"
                                                                                                                                                        />
                        <TextBlock x:ConnectionId='39' Text="Theme" FontSize="16" Margin="10" x:Name="Theme"                                 
                                                                                                      
                                                                                                                                                                 />
                        <TextBlock x:ConnectionId='40' Text="About" FontSize="16" Margin="10" x:Name="About"                                 
                                                                                                      
                                                                                                                                                                 />
                    </StackPanel>
                    <Grid x:ConnectionId='14' Grid.Row="2" x:Name="MainGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="0" />
                            <ColumnDefinition Width="0" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <StackPanel Orientation="Vertical" Background="Transparent" Margin="15, 0">
                                <TextBlock x:ConnectionId='27' Text="Options" FontFamily="Segoe UI" FontSize="24" Margin="0,15,0,16"
                                                                                                                                                                 />
                                <TextBlock x:ConnectionId='28' Text="Choose language" FontFamily="Segoe UI" FontSize="16" Margin="0,0,0,10"
                                                                                                                                                                 />
                                <ComboBox x:ConnectionId='29' Background="Transparent" FontFamily="Segoe UI" FontSize="16"
                                                                                                                                                               
                                                                                                                                                                           
                                          Width="200" BorderThickness="2" x:Name="LanguagesBox" Style="{StaticResource PiComboBoxStyle}">
                                    <ComboBox.Items>
                                        <ComboBoxItem Content="English" IsSelected="True"/>
                                        <ComboBoxItem Content="Slovak" />
                                        <ComboBoxItem Content="German" />
                                    </ComboBox.Items>
                                </ComboBox>
                                <TextBlock x:ConnectionId='30' Text="Auto save before moving to another effect " Margin="0, 20" FontFamily="Segoe UI" FontSize="16" 
                                                                                                                                                                 />
                                <ToggleSwitch x:ConnectionId='31' x:Name="AutoSaveSwitch" Style="{StaticResource PiToggleSwitchStyle}" Margin="0, -20" 
                                                                                                                                                                   />
                                <Grid x:ConnectionId='32' Height="1" HorizontalAlignment="Stretch" Margin="0, 35, 0, 0"
                                                                                                                                                                      />

                                <TextBlock x:ConnectionId='33' Text="Filter" FontFamily="Segoe UI" FontSize="24" Margin="0,15,0,16"
                                                                                                                                                                 />
                                <TextBlock x:ConnectionId='34' Text="Choose filters" FontFamily="Segoe UI" FontSize="16" Margin="0,0,0,10"
                                                                                                                                                                 />
                                <ComboBox x:ConnectionId='35' Background="Transparent" FontFamily="Segoe UI" FontSize="16" x:Name="FiltersBox"
                                                                                                                                                               
                                                                                                                                                                           
                                          Width="200" BorderThickness="2" Style="{StaticResource PiComboBoxStyle}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate                              >
                                            <CheckBox x:ConnectionId='37'                                                                                     
                                                       Style="{StaticResource PiCheckBoxStyle}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock x:ConnectionId='36' Text="*Note: Selecting too much filters lead to longer loading time." FontFamily="Segoe UI" FontSize="8" Margin="0,5,0,0"
                                                                                                                                                                 />

                            </StackPanel>
                        </Grid>
                        <Grid Grid.Column="1">
                            <StackPanel Orientation="Vertical" Margin="15,0,0,0">
                                <TextBlock x:ConnectionId='18' Text="Predefined" FontFamily="Segoe UI" FontSize="24" Margin="0,15,0,16"
                                                                                                                                                                 />
                                <TextBlock x:ConnectionId='19' Text="Enable dark theme" FontFamily="Segoe UI" FontSize="16" 
                                                                                                                                                                 />
                                <ToggleSwitch x:ConnectionId='20' x:Name="EnableDarkSwitch" Style="{StaticResource PiToggleSwitchStyle}" Margin="0, 5" 
                                                                                                                                                                   />

                                <Grid x:ConnectionId='21' Height="1" HorizontalAlignment="Stretch" Margin="0, 35, 0, 0"
                                                                                                                                                                      />
                                <TextBlock x:ConnectionId='22' Text="Custom" FontFamily="Segoe UI" FontSize="24" Margin="0,15,0,12"
                                                                                                                                                                 />

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:ConnectionId='26' Width="200" Text="Foreground" 
                                                                                                                                                                    />
                                    <StackPanel Orientation="Horizontal">
                                        <Button Background="Blue" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="Red" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="Gray" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="White" Height="18" Width="18" Margin="1,1,1,1"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:ConnectionId='25' Width="200" Text="Background" 
                                                                                                                                                                    />
                                    <StackPanel Orientation="Horizontal">
                                        <Button Background="Blue" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="Red" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="Gray" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="White" Height="18" Width="18" Margin="1,1,1,1"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:ConnectionId='24' Width="200" Text="Panel background" 
                                                                                                                                                                    />
                                    <StackPanel Orientation="Horizontal">
                                        <Button Background="Blue" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="Red" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="Gray" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="White" Height="18" Width="18" Margin="1,1,1,1"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:ConnectionId='23' Width="200" Text="Panel foreground" 
                                                                                                                                                                    />
                                    <StackPanel Orientation="Horizontal">
                                        <Button Background="Blue" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="Red" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="Gray" Height="18" Width="18" Margin="1,1,1,1"/>
                                        <Button Background="White" Height="18" Width="18" Margin="1,1,1,1"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Column="2">
                            <StackPanel Orientation="Vertical" Margin="15,0,0,0">
                                <TextBlock x:ConnectionId='15' Text="PiStudio" FontFamily="Segoe UI" FontSize="24" Margin="0,15,0,12"
                                                                                                                                                                 />
                                <TextBlock Text="Jakub Lichman" FontFamily="Segoe UI" FontSize="14" Margin="0,15,0,5"
                                           Foreground="#FF676767" />
                                <TextBlock Text="Version 1.1.0.0" FontFamily="Segoe UI" FontSize="14" Margin="0,0,0,16"
                                           Foreground="#FF676767" />
                                <HyperlinkButton x:ConnectionId='16' Content="Source Code" NavigateUri="https://github.com/limo1996/Bachelor-Thesis" 
                                                                                                                                                                            />
                                <HyperlinkButton x:ConnectionId='17' Content="LinkedIn" NavigateUri="https://sk.linkedin.com/in/jakub-lichman-123278100" 
                                                                                                                                                                            />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

