<UserControl x:ConnectionId='1'
    x:Class="PiStudio.Win10.UI.Controls.Toolbox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiStudio.Win10.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="360">

    <Grid x:ConnectionId='2' CornerRadius="0" Background="Transparent" BorderThickness="0" BorderBrush="Black" Height="50" Width="360" x:Name="MainGrid"                                                                                >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>
        <Grid x:ConnectionId='3' Background="#AA000000" Grid.ColumnSpan="7" x:Name="Shadow" CornerRadius="0" Canvas.ZIndex="2"/>
        <Grid Grid.Column="0">
            <Button x:ConnectionId='48' BorderBrush="Transparent" BorderThickness="0" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="SizeButton"                         >
                <Grid Width="80" Height="38">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="4*" />
                        </Grid.RowDefinitions>
                        <Rectangle x:ConnectionId='51' Height="1" HorizontalAlignment="Stretch"                                                                                                                      
                                   VerticalAlignment="Center" Grid.Row="0"/>
                        <Rectangle x:ConnectionId='52' Height="2" HorizontalAlignment="Stretch"                                                                                                                     
                                   VerticalAlignment="Center" Grid.Row="1"/>
                        <Rectangle x:ConnectionId='53' Height="4" HorizontalAlignment="Stretch"                                                                                                                     
                                   VerticalAlignment="Center" Grid.Row="2"/>
                        <Rectangle x:ConnectionId='54' Height="6" HorizontalAlignment="Stretch"                                                                                                                     
                                   VerticalAlignment="Center" Grid.Row="3"/>
                    </Grid>
                    <TextBlock x:ConnectionId='49' FontSize="12"                                                            VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="3,0,0,0" Grid.RowSpan="2"
                                                                                                                                                         
                               Width="77"/>
                    <Polygon x:ConnectionId='50' Points="0,0 8,0 4,4" HorizontalAlignment="Center" 
                                                                                                                                                  Grid.Row="2"/>
                </Grid>
            </Button>
        </Grid>
        <Grid x:ConnectionId='4' Grid.Column="1"                                                                                                                            x:Name="Separator1"></Grid>
        <Grid Grid.Column="2">
            <Button x:ConnectionId='40' BorderBrush="Transparent" BorderThickness="0" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="ColorButton"                          >
                <Grid Width="80" Height="38">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid x:ConnectionId='41' Grid.Row="0" BorderThickness="1" Margin="0,0,0,3"
                                                                                                                                                 x:Name="ColorPreview">
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop x:ConnectionId='44' Color="Yellow" Offset="0.0" x:Name="GradientStop1"/>
                                <GradientStop x:ConnectionId='45' Color="Red" Offset="0.25" x:Name="GradientStop2"/>
                                <GradientStop x:ConnectionId='46' Color="Blue" Offset="0.75" x:Name="GradientStop3"/>
                                <GradientStop x:ConnectionId='47' Color="LimeGreen" Offset="1.0" x:Name="GradientStop4"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                    </Grid>
                    <TextBlock x:ConnectionId='42' Grid.Row="1" FontSize="13"                                                             VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="24,-6,25,3" Grid.RowSpan="2"
                                                                                                                                                         />
                    <Polygon x:ConnectionId='43' Points="0,0 10,0 5,5" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                                                                                                                                                  Grid.Row="2"/>
                </Grid>
            </Button>
        </Grid>
        <Grid x:ConnectionId='5' Grid.Column="3"                                                                                                                            x:Name="Separator2"></Grid>
        <Grid Grid.Column="4">
            <Button x:ConnectionId='36' BorderBrush="Transparent" BorderThickness="0" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="CleanButton"                          >
                <Grid Width="80" Height="38">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Rectangle x:ConnectionId='38'                                                                                                                        StrokeThickness="1" StrokeDashArray="5 4" Height="20" VerticalAlignment="Top" />
                        <Polygon x:ConnectionId='39' Points="0,5 5,5 7,0 9,5 14,5 10,9 12,14 7,11 2,14 4,9" Margin="2,2"
                                                                                                                                                      />
                    </Grid>
                    <TextBlock x:ConnectionId='37' FontSize="13"                                                             VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10,0,11,3" Grid.RowSpan="3"
                                                                                                                                                          Width="Auto"/>
                </Grid>
            </Button>
        </Grid>
        <Grid Grid.Column="5" ></Grid>
        <Grid Grid.Column="6">
            <Button x:ConnectionId='33' BorderBrush="Transparent" BorderThickness="0" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="UndoButton"                         >
                <Grid Width="40" Height="38">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <SymbolIcon x:ConnectionId='35' Symbol="Undo" Margin="0,0,0,3"
                                                                                                                                                               
                                    Canvas.ZIndex="1"/>
                    </Grid>
                    <TextBlock x:ConnectionId='34' Grid.Row="1" FontSize="13"                                                            VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,3" Grid.RowSpan="2"
                                                                                                                                                         
                               Canvas.ZIndex="2"/>
                </Grid>
            </Button>
        </Grid>
        <Popup x:ConnectionId='6' x:Name="SizePopup" Margin="0,48">
            <Border x:ConnectionId='26' BorderBrush="Gray" BorderThickness="1" Width="100" Background="White"                                                                                >
                <StackPanel x:ConnectionId='27' HorizontalAlignment="Stretch" VerticalAlignment="Center" x:Name="LineSizes">
                    <Button x:ConnectionId='28' Height="20" BorderThickness="0" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Center"                    >
                        <Rectangle Height="1" Width="190" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="Black"/>
                    </Button>
                    <Button x:ConnectionId='29' Height="20" BorderThickness="0" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Center"                    >
                        <Rectangle Height="3" Width="190" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="Black"/>
                    </Button>
                    <Button x:ConnectionId='30' Height="20" BorderThickness="0" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Center"                    >
                        <Rectangle Height="5" Width="190" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="Black"/>
                    </Button>
                    <Button x:ConnectionId='31' Height="20" BorderThickness="0" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Center"                    >
                        <Rectangle Height="8" Width="190" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="Black"/>
                    </Button>
                    <Button x:ConnectionId='32' Height="20" BorderThickness="0" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Center"                    >
                        <Rectangle Height="12" Width="190" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="Black"/>
                    </Button>
                </StackPanel>
            </Border>
        </Popup>
        <Popup x:ConnectionId='7' x:Name="ColorPopup" Margin="100,48">
            <Border x:ConnectionId='8' BorderBrush="Black" BorderThickness="0" Width="100" Height="100" CornerRadius="0"                                                                                >
                <Grid x:ConnectionId='9' HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White" x:Name="ColorPalette">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='10' Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="Black" Background="Green"                             x:Name="GreenBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='11' Grid.Row="0" Grid.Column="2" BorderThickness="1" BorderBrush="Black" Background="YellowGreen"                             x:Name="YellowGreenBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='12' Grid.Row="0" Grid.Column="4" BorderThickness="1" BorderBrush="Black" Background="Blue"                             x:Name="BlueBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='13' Grid.Row="0" Grid.Column="6" BorderThickness="1" BorderBrush="Black" Background="BlueViolet"                             x:Name="BlueVioletBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='14' Grid.Row="2" Grid.Column="0" BorderThickness="1" BorderBrush="Black" Background="Yellow"                             x:Name="YellowBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='15' Grid.Row="2" Grid.Column="2" BorderThickness="1" BorderBrush="Black" Background="Purple"                             x:Name="PurpleBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='16' Grid.Row="2" Grid.Column="4" BorderThickness="1" BorderBrush="Black" Background="Red"                             x:Name="RedBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='17' Grid.Row="2" Grid.Column="6" BorderThickness="1" BorderBrush="Black" Background="RosyBrown"                             x:Name="RosyBrownBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='18' Grid.Row="4" Grid.Column="0" BorderThickness="1" BorderBrush="Black" Background="Black"                             x:Name="BlackBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='19' Grid.Row="4" Grid.Column="2" BorderThickness="1" BorderBrush="Black" Background="Gray"                             x:Name="GrayBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='20' Grid.Row="4" Grid.Column="4" BorderThickness="1" BorderBrush="Black" Background="Salmon"                             x:Name="SalmonBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='21' Grid.Row="4" Grid.Column="6" BorderThickness="1" BorderBrush="Black" Background="Azure"                             x:Name="AzureBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='22' Grid.Row="6" Grid.Column="0" BorderThickness="1" BorderBrush="Black" Background="Aquamarine"                             x:Name="AquamarineBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='23' Grid.Row="6" Grid.Column="2" BorderThickness="1" BorderBrush="Black" Background="White"                             x:Name="WhiteBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='24' Grid.Row="6" Grid.Column="4" BorderThickness="1" BorderBrush="Black" Background="Magenta"                             x:Name="MagentaBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='25' Grid.Row="6" Grid.Column="6" BorderThickness="1" BorderBrush="Black" Background="Brown"                             x:Name="BrownBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>

